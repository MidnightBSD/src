	FS_FILE_COMPRESSION		FS_VOL_IS_COMPRESSED

	HANDLE_FLAG_INHERIT		HANDLE_FLAG_PROTECT_FROM_CLOSE

	IOCTL_STORAGE_CHECK_VERIFY	IOCTL_STORAGE_MEDIA_REMOVAL
