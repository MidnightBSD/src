#!/usr/local/bin/perl

use strict ;
use warnings ;

use IO::Uncompress::AnyInflate qw( anyinflate $AnyInflateError );

@ARGV = '-' unless @ARGV ;

foreach my $file (@ARGV) {

    anyinflate $file       => '-',
               Transparent => 1,
               Strict      => 0,
         or die "Cannot uncompress '$file': $AnyInflateError\n" ;

}
