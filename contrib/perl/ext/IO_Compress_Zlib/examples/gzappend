#!/usr/local/bin/perl

use IO::Compress::Gzip qw( $GzipError );
use strict ;
use warnings ;

die "Usage: gzappend gz-file file...\n"
    unless @ARGV ;


my $output = shift @ARGV ;

@ARGV = '-' unless @ARGV ;

my $gz = new IO::Compress::Gzip $output, Merge => 1
     or die "Cannot open $output: $GzipError\n" ;

$gz->write( [@ARGV] )
     or die "Cannot open $output: $GzipError\n" ;

$gz->close;

    

