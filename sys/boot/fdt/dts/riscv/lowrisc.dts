/dts-v1/;

/ {
	model = "UC Berkeley Spike Simulator RV64I";
	compatible = "riscv,rv64i";
	#address-cells = <1>;
	#size-cells = <1>;
	#interrupt-cells = <1>;

	cpus {
		#address-cells = <1>;
		#size-cells = <0>;

		cpu@0 {
			device_type = "cpu";
			compatible = "riscv,rv64i";
			reg = <0x40002000>;
		};
	};

	aliases {
		serial0 = &serial0;
	};

	memory {
		device_type = "memory";
		reg = <0x0 0x8000000>; /* 128MB at 0x0 */
	};

	soc {
		#address-cells = <1>;
		#size-cells = <1>;
		#interrupt-cells = <1>;

		compatible = "simple-bus";
		ranges;

		pic0: pic@0 {
			compatible = "riscv,pic";
			interrupt-controller;
		};

		serial0: serial@80001000 {
			compatible = "ns16550";
			reg = <0x80001000 0x1000>;
			reg-shift = <2>;
			interrupts = < 4 >;
			interrupt-parent = <&pic0>;
			current-speed = <115200>;
			clock-frequency = < 1000000 >;
			status = "okay";
		};

		spi0: spi@80010000 {
			compatible = "xlnx,xps-spi-3.2";
			reg = <0x80010000 0x1000>;
		};

		timer0: timer@0 {
			compatible = "riscv,timer";
			interrupts = < 1 >;
			interrupt-parent = < &pic0 >;
			clock-frequency = < 1000000 >;
		};
	};

	chosen {
		bootargs = "-v";
		stdin = "serial0";
		stdout = "serial0";
	};
};
