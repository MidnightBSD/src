# $FreeBSD: release/7.0.0/sys/amd64/conf/DEFAULTS 170520 2007-06-11 00:38:06Z marcel $

machine		amd64

# Bus support.
device		isa

# Pseudo devices.
device		mem		# Memory and kernel memory devices
device		io		# I/O device

# UART chips on this platform
device		uart_ns8250

# Default partitioning schemes
options 	GEOM_BSD
options 	GEOM_MBR

# KSE support went from being default to a kernel option
options 	KSE
