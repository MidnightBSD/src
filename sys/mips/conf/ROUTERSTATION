#
# Ubiquiti Routerstation: Boot from onboard flash
#
# $FreeBSD: release/10.0.0/sys/mips/conf/ROUTERSTATION 250385 2013-05-08 20:57:37Z adrian $
#

include		"AR71XX_BASE"
ident		"ROUTERSTATION"
hints		"ROUTERSTATION.hints"

# XXX Is there an RTC on the RS?

# GEOM modules
device		geom_redboot	# to get access to the SPI flash partitions
device		geom_uzip	# compressed in-memory filesystem support
options		GEOM_UZIP

# For DOS
options		MSDOSFS

# Etherswitch support
options		ARGE_MDIO
device		miiproxy
device		etherswitch
device		ukswitch

# Boot path - redboot MFS
options		ROOTDEVNAME=\"ufs:redboot/rootfs.uzip\"
