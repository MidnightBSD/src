#!/bin/sh
#
# $FreeBSD: src/etc/rc.d/ftpd,v 1.1.2.1 2006/01/29 13:52:34 yar Exp $
# $MidnightBSD$

# PROVIDE: ftpd
# REQUIRE: LOGIN cleanvar

. /etc/rc.subr

name="ftpd"
rcvar=`set_rcvar`
command="/usr/libexec/${name}"
pidfile="/var/run/${name}.pid"
start_precmd=ftpd_prestart

ftpd_prestart()
{
	rc_flags="-D ${rc_flags}"
	return 0
}

load_rc_config $name
run_rc_command "$1"
