#!/bin/sh
#
# $FreeBSD: release/7.0.0/etc/rc.d/dmesg 175737 2008-01-28 07:58:32Z dougb $
#

# PROVIDE: dmesg
# REQUIRE: mountcritremote cleanvar
# BEFORE:  DAEMON
# KEYWORD: nojail

. /etc/rc.subr

name="dmesg"
rcvar=`set_rcvar`
dmesg_file="/var/run/dmesg.boot"
start_cmd="do_dmesg"
stop_cmd=":"

do_dmesg()
{
	rm -f ${dmesg_file}
	( umask 022 ; /sbin/dmesg $rc_flags > ${dmesg_file} )
}

load_rc_config $name
run_rc_command "$1"
