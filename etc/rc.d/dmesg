#!/bin/sh
#
# $FreeBSD: release/10.0.0/etc/rc.d/dmesg 240336 2012-09-11 05:04:59Z obrien $
#

# PROVIDE: dmesg
# REQUIRE: mountcritremote FILESYSTEMS
# BEFORE:  DAEMON
# KEYWORD: nojail

. /etc/rc.subr

name="dmesg"
rcvar="dmesg_enable"
dmesg_file="/var/run/dmesg.boot"
start_cmd="do_dmesg"
stop_cmd=":"

do_dmesg()
{
	rm -f ${dmesg_file}
	( umask 022 ; /sbin/dmesg $rc_flags > ${dmesg_file} )
}

load_rc_config $name
run_rc_command "$1"
