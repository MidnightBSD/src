#!/bin/sh
#
# $FreeBSD: release/7.0.0/etc/rc.d/quota 175737 2008-01-28 07:58:32Z dougb $
#

# Enable/Check the quotas (must be after ypbind if using NIS)

# PROVIDE: quota
# REQUIRE: mountcritremote
# BEFORE: DAEMON
# KEYWORD: nojail

. /etc/rc.subr

name="quota"
rcvar="enable_quotas"
start_cmd="quota_start"
stop_cmd="/usr/sbin/quotaoff ${quotaoff_flags}"

quota_start()
{
	if checkyesno check_quotas; then
		echo -n 'Checking quotas:'
		quotacheck ${quotacheck_flags}
		echo ' done.'
	fi

	echo -n 'Enabling quotas:'
	quotaon ${quotaon_flags}
	echo ' done.'
}

load_rc_config $name
run_rc_command "$1"
