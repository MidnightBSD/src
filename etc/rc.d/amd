#!/bin/sh
#
# $NetBSD: amd,v 1.10 2002/04/29 12:08:17 lukem Exp $
# $FreeBSD: src/etc/rc.d/amd,v 1.15.2.1 2006/01/08 09:20:47 rse Exp $
# $MidnightBSD: src/etc/rc.d/amd,v 1.3 2006/10/18 16:07:04 laffer1 Exp $

# PROVIDE: amd
# REQUIRE: rpcbind ypbind nfsclient cleanvar ldconfig
# BEFORE: DAEMON
# KEYWORD: nojail

. /etc/rc.subr

name="amd"
rcvar=`set_rcvar`
command="/usr/sbin/${name}"
start_precmd="amd_precmd"
command_args="&"
extra_commands="reload"

amd_precmd()
{
	if ! checkyesno nfs_client_enable; then
		force_depend nfsclient || return 1
	fi

	if ! checkyesno rpcbind_enable  && \
	    ! /etc/rc.d/rpcbind forcestatus 1>/dev/null 2>&1
	then
		force_depend rpcbind || return 1
	fi

	case ${amd_map_program} in
	[Nn][Oo] | '')
		;;
	*)
		rc_flags="${rc_flags} `eval ${amd_map_program}`"
		;;
	esac

	case "${amd_flags}" in
	'')
		if [ ! -r /etc/amd.conf ]; then
			warn 'amd will not load without arguments'
			return 1
		fi
		;;
	*)
		rc_flags="-p ${rc_flags} > /var/run/amd.pid 2> /dev/null"
		;;
	esac
	return 0
}

load_rc_config $name
run_rc_command "$1"
