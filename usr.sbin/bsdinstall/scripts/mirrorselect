# $FreeBSD: src/usr.sbin/bsdinstall/scripts/mirrorselect,v 1.4 2011/09/10 09:40:00 brueffer Exp $

: ${DIALOG_OK=0}
: ${DIALOG_CANCEL=1}
: ${DIALOG_HELP=2}
: ${DIALOG_EXTRA=3}
: ${DIALOG_ITEM_HELP=4}
: ${DIALOG_ESC=255}

exec 3>&1
MIRROR=`dialog --backtitle "MidnightBSD Installer" \
    --title "Mirror Selection" --extra-button --extra-label "Other" \
    --menu "Please select the site closest to you or \"other\" if you'd like to specify a different choice.  Also note that not every site listed here carries more than the base distribution kits. Only Primary sites are guaranteed to carry the full range of possible distributions. Select a site that's close!" \
    0 0 0 \
	ftp://ftp1.midnightbsd.org 	"Primary"\
	ftp://ftp2.midnightbsd.org 	"Primary #2"\
	ftp://ftp3.midnightbsd.org 	"Primary #3"\
    2>&1 1>&3`
MIRROR_BUTTON=$?
exec 3>&-

_UNAME_R=`uname -r`

case ${_UNAME_R} in
	*-CURRENT|*-STABLE|*-PRERELEASE)
		RELDIR="snapshots"
		;;
	*)
		RELDIR="releases"
		;;
esac

BSDINSTALL_DISTSITE="$MIRROR/pub/MidnightBSD/${RELDIR}/`uname -m`/`uname -p`/${_UNAME_R}"

case $MIRROR_BUTTON in
$DIALOG_CANCEL)
	exit 1
	;;
$DIALOG_OK)
	;;
$DIALOG_EXTRA)
	exec 3>&1
	BSDINSTALL_DISTSITE=`dialog --backtitle "MidnightBSD Installer" \
	    --title "Mirror Selection" \
	    --inputbox "Please enter the URL to an alternate mirror:" \
	    0 0 "$BSDINSTALL_DISTSITE" 2>&1 1>&3`
	MIRROR_BUTTON=$?
	exec 3>&-
	test $MIRROR_BUTTON -eq 0 || exec $0 $@
	;;
esac

export BSDINSTALL_DISTSITE
echo $BSDINSTALL_DISTSITE >&2
