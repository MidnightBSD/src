#!/usr/local/bin/perl

use blib;
use Getopt::Long;
use Net::NNTP;

$opt_debug = undef;

GetOptions(qw(debug));

@groups = @ARGV;

$nntp = Net::NNTP->new('news', Debug => $opt_debug ? 1 : 0);

if($subs = $nntp->newsgroups)
 {
  print join("\n",(keys %$subs)[0 .. 10]),"\n";
 }
 else
 {
  warn $nntp->message;
 }

foreach $group (@groups)
 {
  $new = $nntp->newnews(time - 3600, lc $group);

  if(ref($new) && scalar(@$new))
   {
    print@{$news}[0..3],"\n"
        if $news = $nntp->article($new->[-1]);

    warn $nntp->message
         unless $news;
   }
 }

$nntp->quit;


