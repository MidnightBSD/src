srcdir =	@srcdir@
VPATH =		@srcdir@
top_srcdir =	@top_srcdir@

# Attempt to disable parallel processing.
.NOTPARALLEL:
.NO_PARALLEL:

@BIND9_VERSION@

@BIND9_MAKE_INCLUDES@

CINCLUDES =	-I. -Iinclude ${DNS_INCLUDES} ${ISC_INCLUDES} @DST_OPENSSL_INC@
CDEFINES =	@USE_OPENSSL@ -DTESTS="\"${top_builddir}/lib/dns/tests/\""

ISCLIBS =	../../isc/libisc.@A@
ISCDEPLIBS =	../../isc/libisc.@A@
DNSLIBS =	../libdns.@A@ @DNS_CRYPTO_LIBS@
DNSDEPLIBS =	../libdns.@A@

LIBS =		@LIBS@ @ATFLIBS@

OBJS =		dnstest.@O@
SRCS =		db_test.c \
		dbiterator_test.c \
		dbversion_test.c \
		dnstest.c \
		master_test.c \
		nsec3_test.c \
		rdata_test.c \
		rdataset_test.c \
		time_test.c \
		zonemgr_test.c

SUBDIRS =
TARGETS =	db_test@EXEEXT@ \
		dbiterator_test@EXEEXT@ \
		dbversion_test@EXEEXT@ \
		master_test@EXEEXT@ \
		nsec3_test@EXEEXT@ \
		rdata_test@EXEEXT@ \
		rdataset_test@EXEEXT@ \
		time_test@EXEEXT@ \
		zonemgr_test@EXEEXT@

@BIND9_MAKE_RULES@

master_test@EXEEXT@: master_test.@O@ dnstest.@O@ ${ISCDEPLIBS} ${DNSDEPLIBS}
	${LIBTOOL_MODE_LINK} ${PURIFY} ${CC} ${CFLAGS} ${LDFLAGS} -o $@ \
			master_test.@O@ dnstest.@O@ ${DNSLIBS} \
				${ISCLIBS} ${LIBS}

